<section class="single-blog overflow-hidden">
  <div class="container-fluid">
    <article class="single-blog-data" itemscope itemtype="http://schema.org/BlogPosting">
      <div class="blog-content d-block">
        {%- if article.image -%}
          <div class="blog-thumbnail">
            <img src="{{ article.image | image_url: width: article.image.width }}" loading="lazy" width="{{ article.image.width }}" height="{{ article.image.height }}" alt="{{ article.image.alt | escape }}" />
          </div>
        {%- endif -%}
        <div class="content">
          <div class="breadcrumb-box">
            <p>
              <a href="/">Home</a> <span> &gt; </span> <a href="/blogs/all">Blog</a> <span> &gt; </span> <strong>{{ article.title | escape }}</strong></p>
          </div>
          <h1 class="blog-title">{{ article.title | escape }}</h1>
          <div class="meta-data">By <strong>{{ article.author }}</strong> on <strong>{{ article.published_at | time_tag: format: 'abbreviated_date' }}</strong></div>
          <div class="description">
            {{ article.content }}
          </div>
        </div>
      </div>
    </article>
  </div>
</section>