              <div class="product-slide">
                <div class="slider-content text-center">
                  <div class="product-image">
                    <a title="Slide-1" href="{{ section.settings.article1.url }}">
                      {{ section.settings.article1.image | image_url: height: 300, width: 300, crop: 'top' | image_tag:
                        loading: 'lazy',
                        width: 300,
                        height: 300,
                        alt: section.settings.article1.image.alt | escape
                      }}
                    </a>
                  </div>
                  <div class="product-title">
                    <div class="meta-data">By <strong>{{ section.settings.article1.author }}</strong> on<span> {{ section.settings.article1.updated_at | date: format: 'abbreviated_date' }}</span></div>
                    <p>
                      <a href="{{ section.settings.article1.url }}">{{ section.settings.article1.title }}</a>
                    </p>
                  </div>
                </div>
              </div>
            </div>
